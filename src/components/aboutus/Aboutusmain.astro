              </div>
              <!-- Slide 4 -->
              <div class="swiper-slide !w-auto">
                <img src="/images/2aboutus4.png" alt="Coffee 4"
                  class="w-[150px] h-[200px] md:w-[220px] md:h-[320px] lg:w-[290px] lg:h-[400px] xl:w-[375px] xl:h-[480px] object-cover rounded-sm shadow-lg" />
              </div>
              <!-- Slide 5 -->
              <div class="swiper-slide !w-auto">
                <img src="/images/2aboutus5.png" alt="Coffee 5"
                  class="w-[150px] h-[200px] md:w-[220px] md:h-[320px] lg:w-[290px] lg:h-[400px] xl:w-[375px] xl:h-[480px] object-cover rounded-sm shadow-lg" />
              </div>
              <!-- Slide 6 -->
              <div class="swiper-slide !w-auto">
                <img src="/images/2aboutus6.png" alt="Coffee 6"
                  class="w-[150px] h-[200px] md:w-[220px] md:h-[320px] lg:w-[290px] lg:h-[400px] xl:w-[375px] xl:h-[480px] object-cover rounded-sm shadow-lg" />
              </div>
              <!-- Slide 7 -->
              <div class="swiper-slide !w-auto">
                <img src="/images/2aboutus7.png" alt="Coffee 7"
                  class="w-[150px] h-[200px] md:w-[220px] md:h-[320px] lg:w-[290px] lg:h-[400px] xl:w-[375px] xl:h-[480px] object-cover rounded-sm shadow-lg" />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>