          <!-- Swiper -->
          <div class="swiper mySwiper relative z-10">
            <div class="swiper-wrapper items-center">
              <!-- Slide 1 (besar) -->
              <div class="swiper-slide !w-auto">
                <img src="/images/2aboutus1.png" alt="Coffee 1"
                  class="w-[355px] h-[200px] md:w-[425px] md:h-[320px] lg:w-[575px] lg:h-[400px] xl:w-[730px] xl:h-[480px] object-cover rounded-sm shadow-lg" />
              </div>
              <!-- Slide 2 -->
              <div class="swiper-slide !w-auto">
