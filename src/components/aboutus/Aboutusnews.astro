<!-- Swiper wrapper - now visible on tablet (md) and desktop (lg) -->
<section class="hidden md:block w-full bg-excelso-dark py-8 md:py-10 lg:py-12">
  <div class="max-w-[1400px] mx-auto px-4 md:px-6 lg:px-8">
