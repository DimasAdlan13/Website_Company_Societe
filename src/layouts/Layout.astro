---
// Di Layout.astro
import 'aos/dist/aos.css'; // Tambahkan ini!
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/images/logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>Societe</title>
		  <link href="https://fonts.googleapis.com/css2?family=Abhaya+Libre:wght@400;700&display=swap" rel="stylesheet">

	
	</head>
	<body class="bg-excelso-dark">
    <div class="overflow-x-hidden">
      <slot />
    </div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

  /* Tambahkan global style ini untuk mencegah overflow horizontal */
  body {
    overflow-x: hidden;
    width: 100%;
  }
</style>

<script>
  import AOS from "aos";
  AOS.init({
  duration: 2000,
  once: true,
  offset: 50, // Trigger lebih awal di mobile
  delay: 100, // Delay untuk memastikan layout sudah stabil
  disable: false // Aktifkan di semua device
});
</script>

<script>
  import Swiper from "swiper";

  document.addEventListener("DOMContentLoaded", () => {
    const swiperEl = document.querySelector(".mySwiper");
    if (swiperEl) {
      new Swiper(".mySwiper", {
        slidesPerView: "auto",
        spaceBetween: 5,
        freeMode: true,
        grabCursor: true,
      });
    }
  });
</script>


<script is:inline>
  document.querySelectorAll(".group video").forEach((video) => {
    const card = video.parentElement;
    card.addEventListener("mouseenter", () => video.play());
    card.addEventListener("mouseleave", () => {
      video.pause();
      video.currentTime = 0; // biar balik ke awal
    });
  });
</script>